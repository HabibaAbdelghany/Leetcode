class Solution {
public:
    int lengthOfLastWord(string s) {
        int counter=0;
        for(int i=s.size()-1;i>=0;i--){

            if(counter!=0 && s[i]==' ')
                  return counter; 

            if(s[i]==' ')
            continue;
            else
            counter++;

        }
        return counter;
    }
};
